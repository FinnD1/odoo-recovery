<odoo>
    <data>
        <!-- Create tree view on Course -->
        <record id='openacademy_course_tree_view' model='ir.ui.view'>
            <field name='name'>Courses Tree</field>
            <field name='model'>openacademy.course</field>
            <field name='arch' type='xml'>
                <tree string='Course Tree'>
                    <field name='title'/>
                    <field name='description'/>
                    <field name='responsible_id'/>
                    <field name='session_id'/>
                </tree>
            </field>
        </record>

        <!-- create form on Course -->
        <record id='openacademy_couse_form_view' model='ir.ui.view'>
            <field name='name'>Courses Form</field>
            <field name='model'>openacademy.course</field>
            <field name='arch' type='xml'>
                <form string='Course Form'>
                    <!-- <header>
                        <button id='btn_url' string="Action Url" name="action_url" type="object"/>
                    </header> -->
                    <sheet>
                        <group>
                            <field name='title'/>
                        </group>
                        <group>
                            <notebook>
                                <page>
                                    <field name='description'/>
                                </page>
                            </notebook>
                        </group>
                        <group>
                            <field name='responsible_id'/>
                            <field name='session_id'/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- create tree view on session -->
        <record id='openacademy_session_tree_view' model='ir.ui.view'>
            <field name='name'>Session Tree</field>
            <field name='model'>openacademy.session</field>
            <field name='arch' type='xml'>
                <tree string='Sessions Tree' decoration-info='duration&lt;5' decoration-danger='duration&gt;15' editable='top'>
                <!-- editable nhận giá trị là top hoặc bottom. Làm cho giao diện dạng tree view có thể được chỉnh sửa tại chỗ (thay vì phải đi qua giao diện form view để sửa). -->
                    <field name='name'/>
                    <field name='start_date'/>
                    <field name='duration' />
                    <field name='number_of_seats'/>
                    <field name='instructor_id'/>
                    <field name='course_id'/>
                    <field name='attendee_ids'/>
                    <field name='active'/>
                    <field name='taken_seats' widget='progressbar'/>
                </tree>
            </field>
        </record>

        <!-- create form on Session -->
        <record id='openacademy_session_form_view' model='ir.ui.view'>
            <field name='name'>Session Form</field>
            <field name='model'>openacademy.session</field>
            <field name='arch' type='xml'>
                <form string='Sessions form'>
                    <sheet>
                        <group>
                            <field name='name'/>
                            <field name='start_date'/>
                            <field name='duration'/>
                            <field name='number_of_seats'/>
                            <field name='instructor_id'/>
                            <field name='course_id'/>
                            <field name='attendee_ids'/>
                            <field name='active'/>
                            <field name='taken_seats' widget='progressbar'/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id='openacademy_session_calendar' model='ir.ui.view'>
            <field name='name'>Session Calendar</field>
            <field name='model'>openacademy.session</field>
            <field name='arch' type='xml'>
                <calendar string='Calendar' date_start='start_date'>
                    <field name='name'/>
                    <field name='start_date'/>
                    <field name='duration'/>
                </calendar>
            </field>
        </record>

        <!-- <record id='openacademy_session_kaban' model='ir.ui.view'>
            <field name='name'>Session Kaban</field>
            <field name='model'>openacademy.session</field>
            <field name='arch' type='xml'>
                <kaban>
                
                </kaban>
            </field>
        </record> -->
        <!-- create search form -->
        <record id='openacademy_couse_search' model='ir.ui.view'>
            <field name='name'>Courses Search</field>
            <field name='model'>openacademy.course</field>
            <field name='arch' type='xml'>
                <search string='Course Search'>
                    <field name='title'/>
                    <field name='description'/>
                    <!-- Chuaw lam dc Domain -->
                    <filter name='my_courses' string='My Courses' domain="[('responsible_id','=',uid)]"/>
                    <group string ="Group By">
                        <filter name="by_responsible" string="Responsible" context="{'group_by': 'responsible_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <record model='res.partner.category' id='teacher1'>
            <field name='name'>Teacher /Level 1</field>
        </record>
        <record model='res.partner.category' id='teacher2'>
            <field name='name'>Teacher /Level 2</field>
        </record>

        <!-- action  open course view in models -->
        <record model="ir.actions.act_window" id="openacademy_course_action">
            <field name="name">Courses</field>
            <field name="res_model">openacademy.course</field>
            <field name="view_mode">tree,form</field>
            <field name='context' eval='{"search_default_my_course":1}'/>
        </record>

        <!-- action open session view on models -->
        <record id="openacademy_session_action" model="ir.actions.act_window">
            <field name="name">Session</field>
            <field name="res_model">openacademy.session</field>
            <field name="view_mode">tree,form,calendar</field>
        </record>

        <!-- Action open contact on models -->
        <record id='openacademy_contact_list' model='ir.actions.act_window'>
            <field name='name'>Contact</field>
            <field name='res_model'>res.partner.category</field>
            <field name='view_mode'>tree,form</field>
        </record>

        <!-- Top menu item -->
        <menuitem id="openacademy_menu_root" name="OpenAcademy" sequence="10"/>

        <!-- menu categories( danh sach cac menu) -->
        <menuitem id="openacademy_menu" parent="openacademy_menu_root" name="Academy" sequence="10"/>
        <!-- menu thu1 -->
        <menuitem id="openacademy_menu_courses" parent="openacademy_menu" name="Courses" sequence="10" action="openacademy_course_action"/>

        <!-- menu thu 2 -->
        <menuitem id="openacademy_menu_session" parent="openacademy_menu" name="Session" sequence="10" action="openacademy_session_action"/>

        <!-- menuthu3 -->
        <menuitem id='openacademy_menu_contact' parent='configuration_menu' name='Contact'
        sequence="10" action='openacademy_contact_list'/>
    </data>
</odoo>